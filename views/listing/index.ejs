<% layout("/layouts/boilerplate") %>


    <body>
       
        <h1>All Listing</h1>
       
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
            <%for(listing of allListing){%>
                <a href="/listing/<%= listing._id%>" style="text-decoration: none;">
                <div class="listing-card" style="width: 16rem;">
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing_img" style="height: 16rem;">
                    <div class="card-body cards">
                        <p class="card-text text-primary fs-5 ">
                        <b><%= listing.title%></b>
                    </p>
                    <p>   
                         &#8377;<%= listing.price.toLocaleString("en-IN")%> / night<br>
                
                        </p>
                 
                    </div>
                </div>
            </a>
      
                <% }%>
     
    </div>
    </body>



   